<div class = 'content'>


<% if @books.length >0 %>
<% @books.each do |book| %>
  <div class = 'book'>
    <a class = 'text-dec-off' href = '/book/<%=book.id%>'><p class = 'book_title'><%= book.title %> (<%= book.publication_year %>)</p></a>
    <p class = 'author'><%= book.author %></p>
  </div>
<%end%>
<% else %>
  <h1 class = 'empty'>You have no books in your list yet.</h1>
<%end%>

</div>